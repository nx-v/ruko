// imperative function syntax
func sortedPowerSet(arr: i32[]): i32[][] {
  mut result: i32[][] = []

  for let i in 0 ..< 1 << arr.len {
    mut subset: i32[] = []
    for let j in 0 ..< arr.len if (i >> j) & 1:
      subset.push arr[j]
    result.push subset
  }

  return result.sortBy |a, b| {
    let countA = a.reduce 0, |c,, i| c + 1
    let countB = b.reduce 0, |d,, i| d + 1
    if countA != countB:
      countA - countB
    for let i in 0 ..< min a.len b.len if a[i] != b[i]:
      a[i] - b[i]
    a.len - b.len
  }
}

// infix "backslash" operator examples
let sortedPowerSet = |arr| 0 ..< 1 << arr.len
  \sort\ |a, b| (-) ([a, b] \map\
      |k| (arr \reduce\ 0, |c,, i| c + ((k >> i) & 1))
    ) || arr \reduce\ 0, |d,, i| d || ((b >> i) & 1) - ((a >> i) & 1)
  \map\ |e| (arr \filter\ |, i| (e >> i) & 1)

// LINQ-style syntax
func sortedPowerSet(arr: i32[]): i32[][] = (
  from let i in 0 ..< (1 << arr.len)
  select (
    from let j in 0 ..< arr.len
    where (i >> j) & 1
    select arr[j]
  ) as let subset
  sort by subset.len
  then by (
    from let a, b
    where a.len != b.len
    select a.len - b.len
  ) then by (
    from let i in 0 ..< min(a.len, b.len)
    where a[i] != b[i]
    select a[i] - b[i]
  ) then by a.len - b.len
)

// Objective-C-like syntax
func sortedPowerSet(arr: i32[]): i32[][] {
  let result: i32[][] = []

  [0 ..< 1 << arr.len each: |i| {
    let subset: i32[] = []
    [0 ..< arr.len each: |j| 
      if (i >> j) & 1: subset push: arr[j]]
    [result push: subset]
  }]

  return [result sortBy: |a, b| {
    let countA = [a reduce: 0, |c,, i| c + 1]
    let countB = [b reduce: 0, |d,, i| d + 1]
    if countA != countB:
      return countA - countB
    for let i in 0 ..< min(a.len, b.len) if a[i] != b[i]:
      return a[i] - b[i]
    a.len - b.len
  }]
}

// Clojure-like (prefix) syntax
func sortedPowerSet(arr: i32[]): i32[][] {
  (type i32[][]) mut result = []

  (for let i in (..< 0 (<< 1 (len arr))) {
    (type i32[]) mut subset = []
    (for let j in (..< 0 (len arr)) if (& (>> i j) 1)) {
      (push subset (arr j))
    }
    (push result subset)
  })

  (return (sortBy result (|a, b| {
    (type i32) let countA = (reduce a 0 (|c,, i| (+ c 1)))
    (type i32) let countB = (reduce b 0 (|d,, i| (+ d 1)))
    (if (!= countA countB)
      (return (- countA countB)))
    (for let i in (..< 0 (min (len a) (len b)))
      if (!= (a i) (b i)) {
      (return (- (a i) (b i)))
    })

    (- (len a) (len b))
  })))
}

// JSX/XML-like syntax
func sortedPowerSet(arr: i32[]): i32[][] = <>
  <mut (type i32[][]) $result=[]/>
  <for let=$i in=(0 ..< 1 << arr.len)>
    <mut (type i32[]) $subset=[]/>
    <for let=$j in=(0 ..< arr.len)> 
      <if ((i >> j) & 1)>
        <do (subset.push (arr[j]))/>
      </if>
    </for>
    <do (result.push subset)/>
  </for>
  <do (result.sortBy |a, b| <>
    <let (type i32) $countA=(<do $a.reduce(0, |c,, i| c + 1)/>)/>
    <let (type i32) $countB=(<do $b.reduce(0, |d,, i| d + 1)/>)/>
    <if (countA != countB)>
      <return (countA - countB)/>
    </if>
    <for let=$i in=(0 ..< min a.len b.len)>
      <if (a[i] != b[i])>
        <return (a[i] - b[i])/>
      </if>
    </for>
    <return (a.len - b.len)/>
  </>)/>
  <return $result/>
</>

